# Sevak Medical Chatbot Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_APP_NAME=Sevak Medical Chatbot
REACT_APP_VERSION=1.0.0

# Google Services
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
REACT_APP_GOOGLE_CLOUD_VISION_API_KEY=your_google_cloud_vision_api_key_here
REACT_APP_GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# OpenAI Configuration
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here
REACT_APP_OPENAI_MODEL=gpt-4
REACT_APP_OPENAI_MAX_TOKENS=1000

# Twilio Configuration (for SMS and Voice)
REACT_APP_TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
REACT_APP_TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
REACT_APP_TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# AWS Configuration
REACT_APP_AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
REACT_APP_AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
REACT_APP_AWS_REGION=ap-south-1
REACT_APP_AWS_S3_BUCKET=your_s3_bucket_name_here

# Database Configuration
REACT_APP_MONGODB_URI=mongodb://localhost:27017/sevak_medical
REACT_APP_POSTGRES_URI=postgresql://username:password@localhost:5432/sevak_medical

# Email Configuration
REACT_APP_EMAIL_SERVICE=gmail
REACT_APP_EMAIL_USER=your_email@gmail.com
REACT_APP_EMAIL_PASSWORD=your_email_app_password_here

# Security
REACT_APP_JWT_SECRET=your_jwt_secret_key_here
REACT_APP_ENCRYPTION_KEY=your_encryption_key_here

# Emergency Services (India)
REACT_APP_EMERGENCY_AMBULANCE=102
REACT_APP_EMERGENCY_POLICE=100
REACT_APP_EMERGENCY_FIRE=101
REACT_APP_EMERGENCY_GENERAL=108

# Medical Database
REACT_APP_MEDICAL_API_URL=https://api.medical-database.com
REACT_APP_MEDICAL_API_KEY=your_medical_api_key_here

# Voice Services
REACT_APP_SPEECH_RECOGNITION_LANGUAGE=en-IN
REACT_APP_SPEECH_SYNTHESIS_VOICE=en-IN-Standard-A

# Analytics (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=your_google_analytics_id_here
REACT_APP_SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
REACT_APP_ENABLE_VOICE=true
REACT_APP_ENABLE_FILE_UPLOAD=true
REACT_APP_ENABLE_EMERGENCY_MODE=true
REACT_APP_ENABLE_ACCESSIBILITY=true
REACT_APP_ENABLE_CHAT_HISTORY=true
REACT_APP_ENABLE_MULTILINGUAL=true

# Development
REACT_APP_DEBUG_MODE=true
REACT_APP_LOG_LEVEL=debug
